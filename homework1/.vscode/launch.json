    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--epochs",
                "100",
                "--batch-size",
                "64",
                "--learning-rate",
                "1e-5",
                "--optimer",
                "adam",
                "--hidden_dim",
                "64",
                "--n_layers",
                "3",
                "--activation",
                "Relu"
            ]
        }
    ]
}